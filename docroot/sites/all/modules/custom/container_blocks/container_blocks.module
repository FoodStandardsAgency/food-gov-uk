/**
 * Implements hook_block_view().
 */
function container_blocks_concatenate_content($blocks) {
  $content = '';

  foreach ($blocks as $block) {
    $content .= drupal_render(_block_get_renderable_array(_block_render_blocks(array($block))));
  }

  return $content;
}
