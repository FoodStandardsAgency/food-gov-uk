  $variables['circles'] = array(
    '#theme' => 'item_list',
    '#items' => $circles,
    '#attributes' => array(
      'class' => array(),
    ),
  );

  if ($circles_populated) {
    $variables['circles']['#attributes']['class'][] = 'rate-circles-widget-populated';
