  if (!empty($postcode)) {
    $endpoint = format_string("http://api.postcodes.io/postcodes/@postcode/autocomplete", array('@postcode' => $postcode));
    $url = url($endpoint, array('query' => array('limit' => $limit, 't' => time())));
