}


function _fsa_feedback_build_email_message($entry = NULL) {
  if (empty($entry)) {
    return '';
  }

  $message = !empty($entry->message) ? $entry->message : '';

  $doing = _fsa_feedback_split_message($message, 'doing');
  $wrong = _fsa_feedback_split_message($message, 'wrong');

  $message = array('body' => array());

  if (!empty($doing)) {
    $message['body'][] = _fsa_feedback_email_section_heading('What you were doing') . check_plain($doing);
  }

  if (!empty($wrong)) {
    $message['body'][] = _fsa_feedback_email_section_heading('What went wrong') . check_plain($wrong);
  }

  if (!empty($entry->timestamp)) {
    $message['body'][] = _fsa_feedback_email_section_heading('Date') . check_plain(format_date($entry->timestamp, 'medium'));
  }

  if (!empty($entry->url)) {
    $message['body'][] = _fsa_feedback_email_section_heading('Page') . check_plain($entry->url);
  }

  if (!empty($entry->useragent)) {
    $message['body'][] = _fsa_feedback_email_section_heading('Browser') . check_plain($entry->useragent);
  }

  if (!empty($entry->fid)) {
    $message['body'][] = 'View this message in Drupal: ' . url('admin/reports/feedback/' . $entry->fid, array('absolute' => TRUE));
    $message['body'][] = 'Mark this message as processed: ' . url("admin/reports/feedback/" . $entry->fid . "/process", array('absolute' => TRUE));
  }

  return $message['body'];

}


